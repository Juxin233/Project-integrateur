
{  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItineraryGeoJSON",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "type": {
      "type": "string",
      "const": "FeatureCollection"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "geometry", "properties"],
        "properties": {
          "type": { "type": "string", "const": "Feature" },
          "geometry": {
            "type": "object",
            "required": ["type", "coordinates"],
            "properties": {
              "type": { "type": "string", "const": "LineString" },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "items": { "type": "number" }
                }
              }
            }
          },
          "properties": {
            "type": "object",
            "required": ["length_meters", "estimated_time_sec", "profile"],
            "properties": {
              "length_meters": { "type": "number" },
              "estimated_time_sec": { "type": "number" },
              "profile": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      }
    }
  },
  "additionalProperties": false
}
