{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItineraryRequest",
  "type": "object",
  "required": ["origin", "destination", "profile"],
  "properties": {
    "origin": {
      "type": "object",
      "required": ["lat", "lon"],
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      }
    },
    "destination": {
      "type": "object",
      "required": ["lat", "lon"],
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      }
    },
    "profile": {
      "type": "string",
      "enum": ["comfort", "safety", "speed", "custom"]
    },
    "constraints": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
